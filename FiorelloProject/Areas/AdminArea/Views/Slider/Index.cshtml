@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title justify-content-center text-align-center">Slider Table</h4>
                <a asp-action="Create" class="btn btn-success"> Create Slider</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Image</th>
                                <th>Settings</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@item.ImagreUrl" width="150" height="150" />
                                    </td>



                                    <td>
                                        <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
